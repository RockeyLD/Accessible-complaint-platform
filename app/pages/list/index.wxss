.list-page {
  min-height: 100vh;
  padding: 32rpx;
  background: #fef6e4;
  color: #102a43;
}

.header {
  margin-bottom: 20rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 700;
  display: block;
}

.subtitle {
  color: #5b6b7a;
  font-size: 26rpx;
}

.toolbar {
  display: grid;
  gap: 12rpx;
  grid-template-columns: repeat(auto-fit, minmax(180rpx, 1fr));
  margin-bottom: 12rpx;
}

.toolbar input {
  border-radius: 12rpx;
  border: 1rpx solid rgba(16, 42, 67, 0.2);
  padding: 10rpx 12rpx;
  background: #ffffff;
}

.ghost {
  background: rgba(16, 42, 67, 0.06);
  color: #102a43;
  border-radius: 999rpx;
  padding: 10rpx 18rpx;
}

.ghost.danger {
  color: #d64550;
}

.status {
  color: #5b6b7a;
  margin: 8rpx 0 16rpx;
  display: block;
}

.empty {
  padding: 40rpx 0;
  text-align: center;
  color: #5b6b7a;
}

.complaint-card {
  background: #ffffff;
  border-radius: 18rpx;
  padding: 18rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 12rpx 24rpx rgba(16, 42, 67, 0.12);
}

.card-header {
  margin-bottom: 8rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: 700;
}

.card-meta {
  font-size: 22rpx;
  color: #5b6b7a;
  display: block;
  margin-top: 4rpx;
}

.card-body text {
  display: block;
  margin-top: 6rpx;
  font-size: 24rpx;
}

.card-tags {
  margin-top: 8rpx;
  color: #5b6b7a;
  font-size: 22rpx;
}

.card-tags text {
  display: block;
  margin-top: 4rpx;
}

.card-actions {
  margin-top: 12rpx;
  display: flex;
  justify-content: flex-end;
}
