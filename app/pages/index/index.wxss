.landing {
  min-height: 100vh;
  padding: 60rpx 32rpx;
  text-align: center;
  background: #f0f4f8;
}

.landing-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #102a43;
  margin-bottom: 24rpx;
}

.landing-note {
  color: #5b6b7a;
  display: block;
  margin-bottom: 40rpx;
}

.card-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 24rpx;
}

.role-card {
  width: 300rpx;
  padding: 32rpx;
  border-radius: 24rpx;
  background: #ffffff;
  box-shadow: 0 12rpx 30rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.role-icon {
  font-size: 72rpx;
  margin-bottom: 16rpx;
}

.role-name {
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.role-desc {
  font-size: 24rpx;
  color: #555555;
  line-height: 1.5;
}
