.vision-page {
  min-height: 100vh;
  padding: 32rpx;
  background: #f5f3ef;
  color: #141414;
}

.header {
  text-align: left;
  margin-bottom: 24rpx;
}

.brand {
  font-size: 22rpx;
  letter-spacing: 2rpx;
  text-transform: uppercase;
  display: block;
}

.title {
  font-size: 44rpx;
  font-weight: 700;
  display: block;
  margin: 8rpx 0;
}

.subtitle {
  color: #3d3d3d;
  font-size: 28rpx;
}

.panel {
  background: #ffffff;
  border-radius: 18rpx;
  padding: 24rpx;
  box-shadow: 0 14rpx 35rpx rgba(0, 0, 0, 0.12);
  margin-bottom: 24rpx;
}

.panel-title {
  font-size: 30rpx;
  font-weight: 700;
  margin-bottom: 12rpx;
}

.prompt-box {
  min-height: 160rpx;
  width: 100%;
  padding: 12rpx;
  border-radius: 12rpx;
  border: 1rpx dashed #cfcfcf;
  background: #f9f7f3;
  font-size: 26rpx;
}

.quick-answer {
  margin-top: 12rpx;
  display: grid;
  gap: 12rpx;
}

.field {
  margin-bottom: 16rpx;
}

.label {
  font-weight: 600;
  display: block;
  margin-bottom: 6rpx;
}

input,
textarea {
  width: 100%;
  padding: 10rpx 12rpx;
  border-radius: 12rpx;
  border: 1rpx solid #cfcfcf;
  font-size: 26rpx;
  background: #ffffff;
}

textarea {
  min-height: 140rpx;
}

.picker {
  padding: 10rpx 12rpx;
  border-radius: 12rpx;
  border: 1rpx solid #cfcfcf;
  background: #ffffff;
  color: #3d3d3d;
}

.actions {
  display: grid;
  gap: 12rpx;
  grid-template-columns: repeat(auto-fit, minmax(220rpx, 1fr));
  margin-top: 12rpx;
}

.actions button {
  width: 100%;
}

.primary {
  background: #0f5c5c;
  color: #ffffff;
  border-radius: 999rpx;
  padding: 12rpx 18rpx;
}

.ghost {
  background: #f0f0f0;
  color: #141414;
  border-radius: 999rpx;
  padding: 12rpx 18rpx;
}

.status {
  display: block;
  margin-top: 12rpx;
  color: #3d3d3d;
}
